---
import Layout from '../layouts/Layout.astro';
import Estanteria from '../components/Estanteria.astro';
import Coffe from '../components/Coffe.astro';
import LibroAzul from '../components/LibroAzul.astro';
import LibroRosa from '../components/LibroRosa.astro';
import LibroRojo from '../components/LibroRojo.astro';
import LibroMorado from '../components/LibroMorado.astro';
import LibroAzulTop from '../components/LibroAzulTop.astro';
import LibroRosaTop from '../components/LibroRosaTop.astro';
import LibroRojoTop from '../components/LibroRojoTop.astro';
import LibroMoradoTop from '../components/LibroMoradoTop.astro';
import BookTop from '../components/BookTop.astro';
import CoffeTop from '../components/CoffeTop.astro';
import Flecha from '../components/Flecha.astro';

---

<Layout title="Welcome to Astro.">
	<main>
        <header>

        
            <div id="pared">

                <div id="estanteria1">
                    <Estanteria 
                    widthv='20vw';
                    heightv='20vh';
                    />    
                </div>
            
            </div>
            
            <div id="mesa">
                <div id="libros">
                    <div id="libroazul" class="absolute">
                        <LibroAzul
                        widthv='50vw';
                        heightv='30vh';
                        />
                    </div>
                    <div id="librorosa" class="absolute">
                            <LibroRosa
                            widthv='50vw';
                            heightv='30vh';
                            />
                    </div>

                    <div id="librorojo" class="absolute">
                            <LibroRojo
                            widthv='50vw';
                            heightv='30vh';
                            />
                    </div>
                    <div id="libromorado" class="absolute">
                            <LibroMorado
                            widthv='70vw';
                            heightv='50vh';
                            />
                    </div>
                    </div>
                    <div id="cafe1">
                        <Coffe
                    widthv='25vw';
                    heightv='25vh';
                    />
                    </div>
                </div>
            </div>
            <div id="mesareborde">
            
            </div>
    </header>
    <div id="mesatop">

        <div id="flecha" class="absolute">
            <Flecha
            widthv='5vw';
            heightv='15vh';
            />
        </div>
        <div id="cafetop" class="absolute">
            <CoffeTop
            widthv='25vw';
            heightv= '25vh';
            />
        </div>

        <div id="librosmesa">

            <div id="libroazultop" class="absolute" style="display: none;">
                <LibroAzulTop
                    widthv='70vw';
                    heightv='70vh';
                />
            </div>
            
            <div id="librorosatop" class="absolute">
                <LibroRosaTop
                    widthv='60vw';
                    heightv='60vh';
                />
            </div>
            <div id="librorojotop" class="absolute">
                <LibroRojoTop
                    widthv='60vw';
                    heightv='60vh';
                />
            </div>
            <div id="libromoradotop" class="absolute">
                <LibroMoradoTop
                    widthv='70vw';
                    heightv='70vh';
                />
            </div>
        </div>

        <div id="libro">
            <BookTop
            widthv='80vw';
            heightv='90vh';
            colorv='#5C9DBF'
            colorv2='#46788E'
            />
        </div>
    </div>

        
    </main>

</Layout>

<style>
	#pared {
        background-color: #95BDE8;
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
        width: 100%;
        height: 50vh;
    }
    #mesa {
        background-color: #F1E0CC;
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
        width: 100%;
        height: 42vh;
    }
    #mesareborde {
        background-color: #D8C5B4;
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
        width: 100%;
        height: 8vh;
    }

    #estanteria1{
        
        margin-left: 80%;
        padding-top: 2%;
    }

    #cafe1{
        
        margin-left: 75%;
        padding-top: 5%;
    }

    .absolute {
        position: absolute;
    }

    #libros{
        margin-left: -5%;
    }

    #libroazul{
        bottom: 58%;
        z-index: 4;
        margin-left: 12%;
    }

    #librorosa{
        bottom: 48%;
        z-index: 3;
        margin-left: 8%;
        
    }
    #librorojo{
        bottom: 40%;
        z-index: 2;
        margin-left: 15%;
    }
    #libromorado{
        bottom: 15%;
        z-index: 1;
        margin-left: 0%;
    }

    header{
        position: relative;
    }

    #mesatop{
        height: 100vh;
        background-color: #F1E0CC;
        position: relative;
        overflow: hidden;
    }

    #libro{
        margin-left: 12%;
        padding-top: 2%;
    }

    #libroazultop{
        bottom: 55%;
        z-index: 4;
        margin-left: -15%;
       
    }

    #librorosatop{
        bottom: 25%;
        z-index: 3;
        margin-left: -30%;
        transform: rotate(90deg);
        
        
    }
    #librorojotop{
        bottom: 30%;
        z-index: 2;
        margin-left: -25%;
        transform: rotate(105deg);
       
    }
    #libromoradotop{
        bottom: 12%;
        z-index: 1;
        margin-left: -30%;
        transform: rotate(85deg);
        
    }

    #cafetop{
        margin-left: 79%;
        margin-top: 35%;
        
    }

    #flecha{
        margin-left: 95%;
        margin-top: 2%;
    }



</style>
